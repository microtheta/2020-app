{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2017",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "sourceMap": true,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.js",
        "**/*.ts",
        "**/*.tsx"
    ]
}